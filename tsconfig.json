{
    "ts-node": {
        "transpileOnly": true,
        "require": ["tsconfig-paths/register", "dotenv/config"]
    },
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ES6",
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": false,
        "baseUrl": ".",
        "paths": {
            "@events": ["events"],
            "@events/*": ["events/*"],
            "@assets/*": ["assets/*"],
            "@commands/*": ["events/commands/*"],
            "@constants/*": ["constants/*"],
            "@utilities": ["utilities"],
            "@utilities/*": ["utilities/*"],
            "@images/*": ["images/*"]
        }
    },
    "exclude": ["node_modules"]
}
