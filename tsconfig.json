{
    "ts-node": {
        "transpileOnly": true,
        "require": ["tsconfig-paths/register", "dotenv/config"]
    },
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": false,
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["assets/*"],
            "@commands/*": ["commands/*"],
            "@constants/*": ["constants/*"],
            "@utilities/*": ["utilities/*"]
        }
    },
    "exclude": ["node_modules"]
}
